<div class="container mx-auto px-4 py-8">
<div class="max-w-md mx-auto ">
  <h1 class="text-3xl font-bold mb-4 text-purple-600">Sign Up</h1>

  <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
    <div class="mb-4 text-black">
      <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
        class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div class="mb-4">
      <%= f.label :username, "Username", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", 
        class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div class="mb-4">
      <%= f.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", 
        class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div class="mb-4">
      <%= f.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", 
        class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "new-password", 
        class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", 
        class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div class="mb-4">
      <%= f.label :role, "Sign up as", class: "block text-sm font-medium text-black" %>
      <%= f.select :role, options_for_select([["User", "user"], ["Admin", "admin"]], selected: "user"), 
        class: "mt-1 block w-full px-3 py-2 bg-black border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-white sm:text-sm" %>
    </div>

    <%= f.submit "Sign Up", class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
  </div>
  <div class="mt-4 text-sm text-center text-gray-600">
  <%= render "devise/shared/links" %>
</div>
</div>

